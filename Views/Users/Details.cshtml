@model InventorySys.Models.TblUser

@{
    ViewData["Title"] = "Details";
}

<div class="modal-header bg-info text-white">
    <h5 class="modal-title">
        <i class="bi bi-person-circle me-2"></i>Detalles del Usuario
    </h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body">
    <div class="row g-3">
        <!-- User ID -->
        <div class="col-md-6">
            <div class="info-item">
                <label class="form-label fw-semibold">
                    <i class="bi bi-hash me-1"></i>User ID
                </label>
                <div class="info-value bg-light p-3 rounded border">
                    @Html.DisplayFor(model => model.UserId)
                </div>
            </div>
        </div>

        <!-- Nombre de Usuario -->
        <div class="col-md-6">
            <div class="info-item">
                <label class="form-label fw-semibold">
                    <i class="bi bi-person me-1"></i>Nombre de Usuario
                </label>
                <div class="info-value bg-light p-3 rounded border">
                    @Html.DisplayFor(model => model.UserName)
                </div>
            </div>
        </div>

        <!-- Email -->
        <div class="col-md-6">
            <div class="info-item">
                <label class="form-label fw-semibold">
                    <i class="bi bi-envelope me-1"></i>Email
                </label>
                <div class="info-value bg-light p-3 rounded border">
                    @Html.DisplayFor(model => model.UserEmail)
                </div>
            </div>
        </div>

        <!-- Password (masked) -->
        <div class="col-md-6">
            <div class="info-item">
                <label class="form-label fw-semibold">
                    <i class="bi bi-lock me-1"></i>Contraseña
                </label>
                <div class="info-value bg-light p-3 rounded border">
                    @(new string('*', 8))
                </div>
            </div>
        </div>

        <!-- Estado -->
        <div class="col-md-6">
            <div class="info-item">
                <label class="form-label fw-semibold">
                    <i class="bi bi-toggle-on me-1"></i>Estado
                </label>
                <div class="info-value bg-light p-3 rounded border">
                    @if (Model.UserActive)
                    {
                        <span class="badge bg-success fs-6">
                            <i class="bi bi-check-circle me-1"></i>Activo
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-danger fs-6">
                            <i class="bi bi-x-circle me-1"></i>Inactivo
                        </span>
                    }
                </div>
            </div>
        </div>

        <!-- Rol -->
        <div class="col-md-6">
            <div class="info-item">
                <label class="form-label fw-semibold">
                    <i class="bi bi-person-badge me-1"></i>Rol del Usuario
                </label>
                <div class="info-value bg-light p-3 rounded border">
                    @Html.DisplayFor(model => model.Role.RoleName)
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-primary" onclick="openEditFromDetails(@Model.UserId)">
        <i class="bi bi-pencil-square me-1"></i>Editar Usuario
    </button>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
        <i class="bi bi-x-circle me-1"></i>Cerrar
    </button>
</div>