@model InventorySys.Models.TblMaterial

@{
    ViewData["Title"] = "Delete";
}

<div class="modal-header bg-danger text-white">
    <h5 class="modal-title">
        <i class="bi bi-exclamation-triangle me-2"></i>¿Eliminar Material?
    </h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body">
    <div class="alert alert-warning" role="alert">
        <i class="bi bi-info-circle me-2"></i>
        <strong>Advertencia:</strong> Esta acción no se puede deshacer. El material será eliminado permanentemente.
    </div>

    <div class="row g-2">
        <div class="col-md-6">
            <label class="form-label fw-semibold small">Código</label>
            <div class="bg-light p-2 rounded">@Model.MaterialCode</div>
        </div>

        <div class="col-md-6">
            <label class="form-label fw-semibold small">Descripción</label>
            <div class="bg-light p-2 rounded">@Model.MaterialDescription</div>
        </div>

        <div class="col-md-6">
            <label class="form-label fw-semibold small">Colección</label>
            <div class="bg-light p-2 rounded">@Model.Collection?.CollectionName</div>
        </div>

        <div class="col-md-6">
            <label class="form-label fw-semibold small">Acabado</label>
            <div class="bg-light p-2 rounded">@Model.Finiture?.FinitureName</div>
        </div>

        <div class="col-md-6">
            <label class="form-label fw-semibold small">Formato</label>
            <div class="bg-light p-2 rounded">@Model.Format?.FormatName</div>
        </div>

        <div class="col-md-6">
            <label class="form-label fw-semibold small">Sitio</label>
            <div class="bg-light p-2 rounded">@Model.Site?.SiteName</div>
        </div>

        <div class="col-md-6">
            <label class="form-label fw-semibold small">Stock</label>
            <div class="bg-light p-2 rounded">@Model.MaterialStock.ToString("N0")</div>
        </div>

        <div class="col-md-6">
            <label class="form-label fw-semibold small">Fecha de Arribo</label>
            <div class="bg-light p-2 rounded">@Model.MaterialReceivedDate.ToString("dd/MM/yyyy")</div>
        </div>

        @if (!string.IsNullOrEmpty(Model.MaterialImg))
        {
            <div class="col-12">
                <label class="form-label fw-semibold small">Imagen</label>
                <div class="mt-1">
                    <img src="~/UploadedImages/@Model.MaterialImg" class="rounded" width="100" height="100" alt="Material" />
                </div>
            </div>
        }
    </div>
</div>

<div class="modal-footer">
    <form id="deleteForm" class="d-inline">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.MaterialId" />

        <button type="submit" class="btn btn-danger btn-sm">
            <i class="bi bi-trash me-1"></i>Eliminar
        </button>
        <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">
            <i class="bi bi-x me-1"></i>Cancelar
        </button>
    </form>
</div>

<script>
    $('#deleteForm').on('submit', function(e) {
        e.preventDefault();

        $.ajax({
            url: '/Materials/DeleteModal',
            type: 'POST',
            data: {
                id: $('[name="id"]').val(),
                __RequestVerificationToken: $('[name="__RequestVerificationToken"]').val()
            },
            success: function(response) {
                if (response.success) {
                    closeModal();
                    reloadPage();
                    alert('Material eliminado exitosamente');
                } else {
                    alert(response.message || 'Error al eliminar');
                }
            },
            error: function() {
                alert('Error al eliminar el material');
            }
        });
    });
</script>