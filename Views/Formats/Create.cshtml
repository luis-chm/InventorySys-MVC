@model InventorySys.Models.TblFormat

@{
    ViewData["Title"] = "Create";
}

<div class="modal-header bg-success text-white">
    <h5 class="modal-title">
        <i class="bi bi-aspect-ratio me-2"></i>Crear Nuevo Formato
    </h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form id="createForm">
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>

        <div class="row g-3">
            <!-- Nombre del Formato -->
            <div class="col-12">
                <label asp-for="FormatName" class="form-label fw-semibold">
                    <i class="bi bi-aspect-ratio me-1"></i>Nombre del Formato <span class="text-danger">*</span>
                </label>
                <input asp-for="FormatName" class="form-control" placeholder="Ejemplo: Tile 120x120" required />
                <span asp-validation-for="FormatName" class="text-danger small"></span>
            </div>

            <!-- Tamaño en cm -->
            <div class="col-12">
                <label asp-for="FormatSizeCm" class="form-label fw-semibold">
                    <i class="bi bi-arrows-fullscreen me-1"></i>Tamaño de Formato (cm) <span class="text-danger">*</span>
                </label>
                <input asp-for="FormatSizeCm"
                       type="number"
                       step="0.01"
                       min="1"
                       class="form-control"
                       placeholder="Ejemplo: 60"
                       required />
                <span asp-validation-for="FormatSizeCm" class="text-danger small"></span>
            </div>
            <!-- Estado del Formato -->
            <div class="col-12">
                <label class="form-label fw-semibold">
                    <i class="bi bi-toggle-on me-1"></i>Estado del Formato <span class="text-danger">*</span>
                </label>
                <div class="mt-2">
                    <div class="form-check form-check-inline">
                        <input asp-for="FormatActive" type="radio" value="true" class="form-check-input" id="createActiveTrue" checked required />
                        <label class="form-check-label text-success fw-semibold" for="createActiveTrue">
                            <i class="bi bi-check-circle me-1"></i>Activo
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="FormatActive" type="radio" value="false" class="form-check-input" id="createActiveFalse" required />
                        <label class="form-check-label text-danger fw-semibold" for="createActiveFalse">
                            <i class="bi bi-x-circle me-1"></i>Inactivo
                        </label>
                    </div>
                </div>
                <span asp-validation-for="FormatActive" class="text-danger small"></span>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-success">
            <i class="bi bi-check-circle me-1"></i>Crear Formato
        </button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="bi bi-x-circle me-1"></i>Cancelar
        </button>
    </div>
</form>

<script>
    $('#createForm').on('submit', function (e) {
        e.preventDefault();

        $.ajax({
            url: '/Formats/CreateModal',
            type: 'POST',
            data: $(this).serialize(),
            success: function (response) {
                if (response.success) {
                    closeModal();
                    reloadPage();
                    alert(response.message);
                } else {
                    // Si hay errores de validación, recarga el contenido del modal
                    $('#modalContent').html(response);
                }
            },
            error: function () {
                alert('Error al crear el formato');
            }
        });
    });
</script>
