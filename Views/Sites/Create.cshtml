@model InventorySys.Models.TblSite

@{
    ViewData["Title"] = "Create";
}

<div class="modal-header bg-success text-white">
    <h5 class="modal-title">
        <i class="bi bi-plus-lg me-2"></i>Crear Nuevo Sitio
    </h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form id="createForm">
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>

        <div class="row g-3">
            <div class="col-12">
                <label asp-for="SiteName" class="form-label fw-semibold">
                    <i class="bi bi-geo-alt me-1"></i>Nombre del Sitio <span class="text-danger">*</span>
                </label>
                <input asp-for="SiteName" class="form-control" placeholder="Ej: Planta Central" required />
                <span asp-validation-for="SiteName" class="text-danger small"></span>
            </div>

            <div class="col-12">
                <label asp-for="SiteLocation" class="form-label fw-semibold">
                    <i class="bi bi-geo me-1"></i>Ubicación <span class="text-danger">*</span>
                </label>
                <input asp-for="SiteLocation" class="form-control" placeholder="Ej: San José, Costa Rica" required />
                <span asp-validation-for="SiteLocation" class="text-danger small"></span>
            </div>

            <div class="col-12">
                <label class="form-label fw-semibold">
                    <i class="bi bi-toggle-on me-1"></i>Estado <span class="text-danger">*</span>
                </label>
                <div class="mt-2">
                    <div class="form-check form-check-inline">
                        <input asp-for="SiteActive" type="radio" value="true" class="form-check-input" id="createActiveTrue" checked required />
                        <label class="form-check-label text-success fw-semibold" for="createActiveTrue">
                            <i class="bi bi-check-circle me-1"></i>Activo
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="SiteActive" type="radio" value="false" class="form-check-input" id="createActiveFalse" required />
                        <label class="form-check-label text-danger fw-semibold" for="createActiveFalse">
                            <i class="bi bi-x-circle me-1"></i>Inactivo
                        </label>
                    </div>
                </div>
                <span asp-validation-for="SiteActive" class="text-danger small"></span>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-success">
            <i class="bi bi-check-circle me-1"></i>Crear Sitio
        </button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="bi bi-x-circle me-1"></i>Cancelar
        </button>
    </div>
</form>

<script>
    $('#createForm').on('submit', function(e) {
        e.preventDefault();

        $.ajax({
            url: '/Sites/CreateModal',
            type: 'POST',
            data: $(this).serialize(),
            success: function(response) {
                if (response.success) {
                    closeModal();
                    reloadPage();
                    alert(response.message);
                } else {
                    $('#modalContent').html(response);
                }
            },
            error: function() {
                alert('Error al crear el sitio');
            }
        });
    });
</script>
